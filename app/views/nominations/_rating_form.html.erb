<tboby>
    <% @rating_scales.each_with_index do |r, index| %>
        <tr>
            <td style="width: 50%">
            <%= r.title %>
            <input value="<%= r.title %>" type="hidden" name=<%= "nomination[ratings_attributes][#{index}][title]" %> id= <%= "nomination_ratings_attributes_#{index}_title" %>
            </td>
            <td>
                <div class="row">
                    <div class="col-md-4">
                    Excellent (3 Pts) <input type="radio" value="3" name=<%= "nomination[ratings_attributes][#{index}][value]" %> id=<%= "nomination_ratings_attributes_#{index}_value_3"%>>
                    </div>
                    <div class="col-md-4">
                    Very Good (2 Pts) <input type="radio" value="2" name=<%= "nomination[ratings_attributes][#{index}][value]" %> id=<%= "nomination_ratings_attributes_#{index}_value_2"%>>
                    </div>
                    <div class="col-md-4">
                     Good (1 Pt) <input type="radio" value="1" name=<%= "nomination[ratings_attributes][#{index}][value]" %> id=<%= "nomination_ratings_attributes_#{index}_value_1"%>>
                    </div>
                </div>  
            </td>
        </tr>
    <% end %>
    <tr class='table_total_tr'>
        <td style='width: 50%'>Total</td>
        <td id='aw1_total'>0</td>
    </tr>
</tbody>
